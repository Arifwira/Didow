<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UI.register.RegisterFragment">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="Ini Login" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/HeadingRegist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:alpha="0"
            android:text="DAFTAR"
            android:textAlignment="viewStart"
            android:textColor="@color/black"
            android:textSize="34sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/registerDesc"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/registerDesc"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="32dp"
            android:alpha="0"
            android:text="Silahkan untuk melakukan pendaftaran sebelum belajar ya"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="14sp"
            app:layout_constraintBottom_toTopOf="@+id/daftarNama"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <Button
            android:id="@+id/daftarDaftar"
            style="@style/ButtonGeneral"
            android:layout_marginBottom="16dp"
            android:alpha="0"
            android:backgroundTint="@android:color/darker_gray"
            android:enabled="false"
            android:text="Daftar"
            android:textColor="@color/white"
            app:layout_constraintBottom_toTopOf="@+id/daftarMasuk"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/daftarMasuk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="200dp"
            android:alpha="0"
            android:text="Sudah punya akun? Masuk"
            android:textColor="@color/black"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/daftarDaftar"
            app:layout_constraintStart_toStartOf="@+id/daftarDaftar" />

        <EditText
            android:id="@+id/daftarNama"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:alpha="0"
            android:background="@drawable/custom_input"
            android:drawableStart="@drawable/custom_name"
            android:drawablePadding="10dp"
            android:hint="Masukkan nama"
            android:inputType="textEmailAddress"
            android:padding="10dp"
            android:textColor="@android:color/holo_orange_dark"
            android:textColorHint="@android:color/darker_gray"
            android:textSize="15sp"
            app:layout_constraintBottom_toTopOf="@+id/daftarEmail"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <com.example.storyapp.custom.CustomEmail
            android:id="@+id/daftarEmail"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:alpha="0"
            android:drawablePadding="10dp"
            android:hint="Masukkan email"
            android:inputType="textEmailAddress"
            android:padding="10dp"
            android:textColor="@android:color/holo_orange_dark"
            android:textColorHint="@android:color/darker_gray"
            android:textSize="15sp"
            app:layout_constraintBottom_toTopOf="@+id/daftarPassword"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <com.example.storyapp.custom.CustomPassword
            android:id="@+id/daftarPassword"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="32dp"
            android:alpha="0"
            android:drawablePadding="10dp"
            android:hint="Masukkan password"
            android:inputType="textPassword"
            android:padding="10dp"
            android:textColor="@android:color/holo_orange_dark"
            android:textColorHint="@android:color/darker_gray"
            android:textSize="15sp"
            app:layout_constraintBottom_toTopOf="@+id/daftarDaftar"
            app:layout_constraintStart_toStartOf="@+id/daftarEmail" />

        <ImageView
            android:id="@+id/daftarPaw"
            android:layout_width="150dp"
            android:layout_height="225dp"
            android:layout_marginStart="16dp"
            android:layout_marginBottom="-50dp"
            android:alpha="0"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <ImageView
            android:id="@+id/darkBg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:translationZ="80dp"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@android:drawable/screen_background_dark_transparent" />

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/catRegister"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:scaleType="fitCenter"
            android:translationZ="90dp"
            android:visibility="invisible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"
            app:lottie_rawRes="@raw/cat_loader"
            app:lottie_speed="2" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>