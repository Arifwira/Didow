<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UI.profile.ChangePasswordFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:layout_gravity="center">
        <LinearLayout
            android:layout_width="wrap_content"
            android:background="@drawable/transparentbg"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_gravity="center">


        <TextView
            android:id="@+id/headingPassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ubah Password"
            android:textSize="34dp"
            android:textColor="@color/black"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/textView4"
            android:layout_width="200dp"
            android:textColor="@color/black"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:paddingStart="8dp"
            android:text="Password lama" />

        <EditText
            android:id="@+id/passwordLama"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:background="@drawable/input_border"
            android:hint="Password Lama"
            android:inputType="textPassword"
            android:padding="10dp"
            android:textColorHint="@android:color/darker_gray" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Password Baru"
            android:paddingStart="8dp"
            android:textColor="@color/black" />

        <EditText
            android:id="@+id/passwordBaru"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:background="@drawable/input_border"
            android:ems="10"
            android:layout_marginBottom="16dp"
            android:textColorHint="@android:color/darker_gray"
            android:hint="Password Baru"
            android:inputType="textPassword"
            android:padding="10dp" />
        </LinearLayout>
        <Button
            android:id="@+id/simpanPassword"
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:backgroundTint="@color/orange_bg"
            app:strokeColor="#393939"
            app:strokeWidth="2dp"
            android:stateListAnimator="@null"
            android:textColor="@color/black"
            android:text="simpan"
            app:cornerRadius="50dp" />



    </LinearLayout>
    <ImageView
        android:id="@+id/darkBg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:translationZ="80dp"
        android:visibility="gone"
        android:layout_gravity="center"
        app:srcCompat="@android:drawable/screen_background_dark_transparent" />

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/catRegister"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:scaleType="fitCenter"
        android:translationZ="90dp"
        android:visibility="invisible"
        android:layout_gravity="center"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        app:lottie_rawRes="@raw/cat_loader"
        app:lottie_speed="2" />
</FrameLayout>
